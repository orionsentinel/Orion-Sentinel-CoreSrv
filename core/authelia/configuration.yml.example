host: 0.0.0.0
port: 9091

log:
  level: info

theme: light

jwt_secret: "${AUTHELIA_JWT_SECRET}"
default_redirection_url: "https://home.local"

totp:
  issuer: "Orion Sentinel"
  period: 30
  skew: 1

authentication_backend:
  file:
    path: /config/users.yml
    password:
      algorithm: argon2id
      iterations: 3
      memory: 65536
      parallelism: 4
      salt_length: 16
      key_length: 32

access_control:
  default_policy: deny
  rules:
    - domain: "*.local"
      policy: one_factor
      subject:
        - "group:admins"
  # Example of future bypass:
  #  - domain: "jellyfin.local"
  #    policy: bypass
  #    resources:
  #      - "^/videos/.*$"

session:
  name: "authelia_session"
  secret: "${AUTHELIA_SESSION_SECRET}"
  expiration: 3600
  inactivity: 300
  remember_me_duration: 2592000
  domain: ".local"

storage:
  encryption_key: "${AUTHELIA_STORAGE_ENCRYPTION_KEY}"
  local:
    path: /config/db.sqlite3

notifier:
  filesystem:
    filename: /config/notification.log
