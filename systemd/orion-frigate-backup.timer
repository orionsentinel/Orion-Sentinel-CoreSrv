[Unit]
Description=Orion Sentinel Frigate Recording Backup & Retention Timer
Documentation=https://github.com/orionsentinel/Orion-Sentinel-CoreSrv

[Timer]
# Run daily at 3:30 AM (after database backup at 3:00 AM)
OnCalendar=*-*-* 03:30:00

# If system was off at scheduled time, run when it comes back up
Persistent=true

# Random delay up to 10 minutes
RandomizedDelaySec=600

[Install]
WantedBy=timers.target
